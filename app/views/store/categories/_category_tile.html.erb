<div class="category-tile">
  <div>
    <% if category.category_image.present? %>
      <%= cl_image_tag(category.category_image.resource.url, width: 350) %>
    <% else %>
      <img src="http://placehold.it/350x200" />
    <% end %>
  </div>
  <%= link_to "Shop", category_path(category) %>
  <%= category.name %>
</div>
