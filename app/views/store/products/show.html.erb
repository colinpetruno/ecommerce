<div class="product">
  <div>
    &nbsp;
    <div class="carousel">
      <div>
        <% @product.images.each do |image| %>
          <div>
            <%= cl_image_tag(image.resource.url, width: "100%") %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div>
    <h1><%= @product.name %></h1>
    Description: <%= @product.description %>
    <%= render partial: "order_item_form", locals: { product: @product } %>
    <br><br>
  </div>
</div>

