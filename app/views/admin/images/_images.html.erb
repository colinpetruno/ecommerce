<div class="admin-product-images">
  <h1><%= title || "Images" %></h1>

  <ul>
  <% images.each do |image| %>
    <li>
      <div>
        <%= cl_image_tag(image.resource.url, width: 300) %>

      </div>
        <%= button_to "Delete",
          admin_product_image_path(object, image),
          method: :delete
        %>
    <% end %>
    </li>
  </ul>
</div>

<%= link_to "New Image",
  new_polymorphic_path([:admin, object, :image], photo_type: photo_type),
  class: "button"
%>
